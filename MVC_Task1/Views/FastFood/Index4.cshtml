@model IEnumerable<MVC_Task1.Entities.FastFood>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Task 1</title>
</head>
<body>
    <table style="border-collapse: collapse; width: 100%; font-family: Arial, sans-serif; margin-top: 20px;">
        <tr style="background-color: #f2f2f2; text-align: left; padding: 10px;">
            <th style="padding: 12px; border: 1px solid #ddd; background-color: #4CAF50; color: white;">Id</th>
            <th style="padding: 12px; border: 1px solid #ddd; background-color: #4CAF50; color: white;">Name</th>
            <th style="padding: 12px; border: 1px solid #ddd; background-color: #4CAF50; color: white;">Price</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">@item.Id</td>
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">@item.Name</td>
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">@item.Price</td>
            </tr>
        }
    </table>
</body>

</html>